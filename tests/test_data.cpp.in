#include "test_data.h"
#include <iostream>
#include <boost/filesystem.hpp>

bool test::copy_test_media_file_to(const std::string& media, const std::string& dest)
{
    const std::string file{"@CMAKE_CURRENT_SOURCE_DIR@/" + media};
    std::cerr << media << " -> " << file << " -> " << dest << std::endl;
    try
    {
        boost::filesystem::copy_file(
            file,
            dest,
            boost::filesystem::copy_option::overwrite_if_exists);
    } catch (const boost::filesystem::filesystem_error& e)
    {
        return false;
    }

    return true;
}

bool test::file_exists(const std::string& file)
{
    try
    {
        return boost::filesystem::exists( file );
    } catch (const boost::filesystem::filesystem_error& e)
    {
        return false;
    }
}
